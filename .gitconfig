[user]
	email = janpublicebert@posteo.net
	name = janEbert
[credential]
	helper = cache --timeout 1200
[pull]
	rebase = true
[core]
	editor = vim
	excludesfile = ~/.gitignore_global
[color]
	ui = auto
[transfer]
	fsckObjects = true
[receive]
	fsckObjects = true
[fetch]
	fsckObjects = true

[alias]
	a = add
	ap = add -p
	b = branch
	ca = commit --amend
	cb = checkout -b
	ci = commit
	cm = commit -m
	co = checkout
	cpi = cherry-pick
	cs = clone --depth 1
	csb = clone -b master --single-branch --depth 1
	d = diff
	dc = diff --cached
	dn = diff --name-status
	ds = diff --stat
	f = fetch
	l = log
	llog = log --date=local
	m = merge
	p = pull
	pn = pull --no-rebase
	pr = pull --rebase
	rb = rebase
	rc = rebase --continue
	reauthor = commit --amend --reset-author -C HEAD
	ri = rebase -i
	# Rebase onto $1 from $2 to $3.
	#   $1: Fix or new branch.
	#   $2: First commit that is rebased onto `$1`.
	#   $3: Last commit that is rebased onto `$1`.
	# Example:
	#   git rebase --onto master-fix master~5 master
	ro = rebase --onto
	ru = remote update
	s = status
	sa = submodule add
	si = submodule init
	sm = submodule
	# Sign off the most recent commit non-interactively. Can be used
	# in an interactive rebase.
	so = commit --amend --signoff --no-edit
	sp = push --recurse-submodules=on-demand
	st = stash
	sta = stash apply
	ss = stash show
	ssp = stash show --patch
	su = submodule update --remote --merge
	t = tag

	last = log -1 HEAD
	sroot = rev-parse --show-superproject-working-tree
	root = rev-parse --show-toplevel
	unstage = reset HEAD --
	untrack = rm --cached

	makeshallow = !git pull --depth 1 && git gc --prune=all
	sd = !git diff && git submodule foreach 'git diff'
	pr = !sh -c 'git fetch origin pull/$1/head:pr-$1' -
	prc = !sh -c 'git fetch origin pull/$1/head:pr-$1 && git checkout pr-$1' -
	pruneall = !git remote | xargs -n 1 git remote prune
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
